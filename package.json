{
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "bun --watch src/index.ts --directory ./test",
		"start": "NODE_ENV=production bun src/index.ts",
		"build": "bun build --production --compile --outfile=out/tgscreenshots src/index.ts --define=\"process.env.BOT_TOKEN=\\'$BOT_TOKEN\\'\"",
		"build:dev": "bun build --compile --sourcemap --outfile=out/tgscreenshots src/index.ts --define=\"process.env.BOT_TOKEN=\\'$BOT_TOKEN\\'\"",
		"build:win": "bun run build --target=bun-windows-x64",
		"build:dev:win": "bun run build:dev --target=bun-windows-x64",
		"lint": "bun x @biomejs/biome check",
		"lint:fix": "bun run lint --fix"
	},
	"dependencies": {
		"gramio": "^0.4.11",
		"env-var": "^7.5.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.7",
		"@types/bun": "^1.3.3",
		"type-fest": "^5.2.0",
		"typescript": "^5.9.3"
	}
}
